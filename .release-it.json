{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "pushRepo": "origin",
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "publishPath": "."
  },
  "hooks": {
    "before:init": ["git pull"],
    "after:bump": [
      "npm run build",
      "changelogen",
      "git add CHANGELOG.md"
    ],
    "after:release": [
      "changelogen gh release",
      "echo Successfully released ${name} v${version} to ${repo.repository}."
    ]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "plugins": {}
}
