{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "docs/**/*.md",
    "docs/**/*.ts",
    "docs/**/*.vue",
    "playground/**/*.vue",
    "playground/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  },
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
